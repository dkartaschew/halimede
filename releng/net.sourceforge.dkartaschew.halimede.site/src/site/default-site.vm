<html xmlns="http://www.w3.org/1999/xhtml"#if ( $locale ) xml:lang="$locale.language" lang="$locale.language"#end>
  <head>
	<meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="Content-Type" content="text/html; charset=${outputEncoding}" />
  <title>$decoration.custom.getChild('title').getValue()</title>

  <link rel="stylesheet" href="css/w3.css"> 
	<link rel="stylesheet" href="css/main.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
#if ( $locale )
	<meta http-equiv="Content-Language" content="$locale.language" />
#end
</head>

<body class="composite">

<header class="w3-container w3-top">
<div class="w3-dropdown-hover w3-left">
  <button class="w3-button" style="background-color: #f8f8f8; color: black;"><i class="fa fa-bars"></i></button>
  <div class="w3-dropdown-content w3-bar-block w3-border" >
#foreach( $menu in $decoration.body.menus )
#foreach( $item in $menu.items )
          <a href="$item.href" class="w3-bar-item w3-button w3-white w3-small">$item.name</a>
#end
#end
  </div>
</div>
<p class="w3-center ">$decoration.custom.getChild('title').getValue()</p> 
</header>
 
<div class="content">
$bodyContent
</div>

<footer class="w3-container w3-center" style="margin: auto; width:90%;">

<div class="w3-row">
		<hr />
    <h2 class="w3-small">$decoration.custom.getChild('title').getValue()</h2>
</div>

<div class="w3-row" style="padding: 0;">
    <div class="w3-col s12 m6 l4 w3-small">
      <p>$title</p>
      <p><a href="mailto:$decoration.custom.getChild('email').getValue()">$decoration.custom.getChild('email').getValue()</a></p>
    </div>

    <div class="w3-col s12 m6 l4 w3-small">
      <p>
				<a href="$decoration.custom.getChild('projectsite').getValue()">
				<img src="images/sf-icon-orange-no_sf.svg" width="32" alt="sf icon">
				$decoration.custom.getChild('projectsite').getValue()</a>
      </p>
    </div>

    <div class="w3-col s12 m12 l4 w3-small">
      <p>$decoration.custom.getChild('description').getValue()</p>
#set ( $currentYear = ${currentDate.year} + 1900 )
			<p>Copyright &#169; ${currentYear} All rights reserved.</p>
    </div>
</div>

</footer>
</body>
